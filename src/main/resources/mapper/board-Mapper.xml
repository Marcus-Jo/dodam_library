				(SELECT 'QNA_'||LPAD(NVL(MAX(TO_NUMBER(SUBSTR(QNA_CODE, 6, 3))), 0) + 1, 3, '0') FROM QNA)
	
	)
	</insert> -->
	
	<!-- 공지사항 INSERT -->
	<insert id="insertNotice">
		INSERT INTO NOTICE(
			   NOTICE_CODE
			 , TITLE
			 , WRITER
			 , CONTENT
			 , CREATE_DATE
		)VALUES(
			   (SELECT 'NOTICE_'||LPAD(NVL(MAX(TO_NUMBER(SUBSTR(NOTICE_CODE, 6, 3))), 0) + 1, 3, '0') FROM NOTICE)	
			 , #{noticeCode}
			 , #{title}
			 , #{writer}
			 , #{content}
			 , #{createDate}
		)	 
	</insert>
</mapper>