<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 모든 SQL문을 mapper태그 안에 작성 -->
<mapper namespace="memberMapper">
	
	<!-- resultmap 작성 카운트용 추가 1025봉 -->
	<resultMap type="com.potato.project.member.vo.MemberVO" id="member">
		<id column="ID" 				property="id"/>
		<result column="PW" 			property="pw"/>
		<result column="NAME" 			property="name"/>
		<result column="ADDR" 			property="addr"/>
		<result column="TELL" 			property="tell"/>
		<result column="IS_ADMIN" 		property="isAdmin"/>
		<result column="IS_DELETE" 		property="isDelete"/>
		<result column="GENDER" 		property="gender"/>
		<result column="FAVORITE" 		property="favorite"/>
		<result column="RENTAL_CNT" 		property="rentalCnt"/>
		<result column="RESERVE_CNT" 		property="reserveCnt"/>
		<result column="RETURN_CNT" 		property="returnCnt"/>
	</resultMap>
	
	<!-- 대출resultmap 추가 2025-봉 -->
	<resultMap type="com.potato.project.common.vo.RentalVO" id="rental">
		<id column="RENTAL_CODE" 		property="rentalCode"/>
		<result column="ID" 			property="id"/>
		<result column="BOOK_CODE" 		property="bookCode"/>
		<result column="RENTAL_DATE" 	property="rentalDate"/>
		<result column="LIMIT_DATE" 	property="returnDate"/>	
		<result column="RETURN_DATE" 	property="limitDate"/>	
	</resultMap>
	
	<!-- 예약resultmap 추가 2025-봉 -->
	<resultMap type="com.potato.project.common.vo.ReserveVO" id="reserve">
		<id column="RESERVE_CODE" 				property="reserveCode"/>
		<result column="ID" 					property="id"/>
		<result column="BOOK_CODE" 				property="bookCode"/>
		<result column="RENTABLE_START_DATE" 	property="rentableStartDate"/>
		<result column="RENTABLE_END_DATE" 		property="rentableEndDate"/>	
	</resultMap>
	
	<!-- 회원등록 -->
	<insert id="insertMember">
		INSERT INTO MEMBER (
			ID
			, PW
			, NAME
			, TELL
			, ADDR
			<if test="gender != null and !gender.equals('')">
			, GENDER
			</if>
			<if test="favorite != null and !favorite.equals('')">
			, FAVORITE
			</if>
		) VALUES (
			#{id}
			, #{pw}
			, #{name}
			, #{tell}
			, #{addr}
			<if test="gender != null and !gender.equals('')">
			, #{gender}
			</if>
			<if test="favorite != null and !favorite.equals('')">
			, #{favorite}
			</if>
		)
	</insert>
	
	<!-- 로그인 -->
	<select id="selectMember" resultMap="member">
		SELECT
    		ID
    		, NAME
    		, IS_ADMIN
		FROM MEMBER
		WHERE ID = #{id}
		AND PW = #{pw}
	</select>
	
	<!-- 아이디 중복체크 -->
	<select id="selectMemberId" resultType="String">
		SELECT ID
		FROM MEMBER
		WHERE ID = #{id}
	</select>
	
	<select id="memberBookSituation" resultMap="member">
		SELECT COUNT(RENTAL_CODE) AS RENTAL_CNT
    		, COUNT(RESERVE_CODE) AS RESERVE_CNT
    		, COUNT(RETURN_DATE) AS RETURN_CNT
		FROM RENTAL A, RESERVE B, MEMBER C
		WHERE C.ID = #{id}
	</select>
	
</mapper>












